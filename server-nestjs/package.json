{
    "name": "server-nestjs",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.2.0",
    "private": true,
    "scripts": {
        "prebuild": "rimraf out",
        "build": "rimraf out && nest build",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "start": "rimraf out && nest start --watch",
        "start:debug": "rimraf out && nest start --watch --debug",
        "lint": "eslint --config eslint.config.mjs \"./app/**/*.ts\"",
        "lint:fix": "eslint --config eslint.config.mjs \"./app/**/*.ts\" --fix",
        "test": "jest",
        "coverage": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "dependencies": {
        "@nestjs/common": "11.1.6",
        "@nestjs/config": "4.0.2",
        "@nestjs/core": "11.1.6",
        "@nestjs/mongoose": "11.0.3",
        "@nestjs/platform-express": "11.1.6",
        "@nestjs/platform-socket.io": "11.1.6",
        "@nestjs/swagger": "11.2.0",
        "@nestjs/websockets": "11.1.6",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "module-alias": "^2.2.3",
        "mongoose": "8.17.1",
        "reflect-metadata": "^0.2.2",
        "rimraf": "6.0.1",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.7",
        "@nestjs/testing": "^11.1.6",
        "@types/express": "^5.0.3",
        "@types/jest": "30.0.0",
        "@types/node": "^24.2.1",
        "@types/sinon": "^17.0.4",
        "@types/supertest": "^6.0.3",
        "@eslint/js": "9.33.0",
        "@typescript-eslint/eslint-plugin": "8.39.1",
        "@typescript-eslint/parser": "8.39.1",
        "eslint": "9.33.0",
        "jest": "30.0.5",
        "mongodb-memory-server": "10.2.0",
        "prettier": "^3.6.2",
        "sinon": "^21.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-jest": "29.4.1",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.9.2"
    },
    "_moduleAliases": {
        "@app": "out/server-nestjs/app",
        "@common": "out/common"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "app/**/*.(t|j)s",
            "!app/app.module.ts",
            "!app/index.ts"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@app(.*)$": "<rootDir>/app/$1",
            "^@common(.*)$": "<rootDir>/../common/$1"
        }
    }
}