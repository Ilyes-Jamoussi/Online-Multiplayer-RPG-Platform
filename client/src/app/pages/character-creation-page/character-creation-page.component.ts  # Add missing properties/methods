export class CharacterCreationPageComponent {
    maxPoints: number = 100; // Initialize maxPoints
    currentPoints: number = 0; // Example property to track current points

    getTotalPoints(): number {
        return this.currentPoints; // Example implementation
    }

    decreaseAttribute(attribute: string): void {
        // Example implementation
        if (this.currentPoints > 0) {
            this.currentPoints--;
        }
    }

    increaseAttribute(attribute: string): void {
        // Example implementation
        if (this.currentPoints < this.maxPoints) {
            this.currentPoints++;
        }
    }

